    transform:rotate(9deg);
}
</style>
<div class="t2">
    hi2
    </div>
<div class="t3">
    hi3
    </div>
    <div class="t4">
    hi4
    </div>


<style>
.t3{
    width:30px;
    height:100px;
    border:1px red solid;
    transform:translate(500px,100px);

}
.t4{
    width: 30px;
    height:40px;
    border-radius:20px;
    background:red;
    transform:rotate(30deg);
}
.t5{
    animation: my 5s;
    width: 30px;
    height:40px;
    border-radius:20px;
    background:red;
}
@keyframes my{
    from {background:red;}
     to{background:yellow;}
}
@keyframes my1{
    from {background:blue; left:0px; top:0px;}
    to {background:yellow; left:100px;  top:200px;}
}
.t6{
    animation: my1 5s;
    animation-iteration-count: 3;
    width:20px;
    height:30px;
    border-radius:10px 10px;
    position: absolute;
}
    </style>
<div class="t5">
        hi5
    </div>
<div class="t6">
t6    
</div>

